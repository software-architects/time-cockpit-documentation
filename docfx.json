{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "**/TimeCockpit.Data.dll",
            "**/TimeCockpit.Data.Export.dll",
            "**/TimeCockpit.Data.Import.dll",
            "**/TimeCockpit.Data.QueryLanguage.dll"
          ],
          "exclude": [
            "**/*.resources.dll",
            "**/TimeCockpit.Test.*.dll",
            "**/obj/**",
            "**/bin/**",
            "_site/**"
          ],
          "src": "../Binaries"
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/**.yml",
          "api/**.md"
        ]
      },
      {
        "files": [
          "doc/**.md",
          "doc/**/toc.yml",
          "toc.yml",
          "*.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**",
          "tools/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "**/images/**",
          "**/code/**",
          "web.config",
          "App_Code/**",
          "App_Data/**",
          "robots.txt",
          "robots.dev.txt"
        ],
        "exclude": [
          "obj/**",
          "_site/**",
          "tools/**"
        ]
      }
    ],
    // "overwrite": [
    //   {
    //     "files": [
    //       "apidoc/**.md"
    //     ],
    //     "exclude": [
    //       "obj/**",
    //       "_site/**"
    //     ]
    //   }
    // ],
    "dest": "_site",
    "globalMetadataFiles": [],
    "globalMetadata": {
      "_appFaviconPath": "images/favicon.ico",
      "_appFooter": "Copyright Â© 2020 software architects gmbh<br/>&nbsp;",
      "_appLogoPath": "images/time-cockpit-logo.png",
      "_appTitle": "time cockpit help",
      "_enableSearch": true,
      "_enableNewTab": true
    },
    "fileMetadataFiles": [],
    "template": [
      "default",
      "tctemplate"
    ],
    "postProcessors": [],
    "noLangKeyword": false
  },
